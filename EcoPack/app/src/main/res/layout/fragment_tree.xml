<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.tree.TreeFragment"
    android:id="@+id/fragment_tree">

    <ImageView
        android:id="@+id/image_tree"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:layout_height="match_parent"
        android:src="@drawable/ic_arvoreneutra"
        android:contentDescription="@string/tree"
        android:layout_marginBottom="@dimen/_40sdp" />

    <TextView
        android:id="@+id/pontosarvore"
        android:layout_marginTop="@dimen/_100sdp"
        android:padding="@dimen/_15sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:textAlignment="center"
        android:maxLines="4"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:textStyle="normal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_15sdp"
    android:id="@+id/floating_action_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top|right"
    android:backgroundTint="@color/dark_mint"
    android:src="@drawable/ic_info"
    app:elevation="0dp" />
</FrameLayout>
