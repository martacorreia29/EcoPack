<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.tree.TreeFragment"
    android:id="@+id/fragment_tree">

    <ImageView
        android:id="@+id/image_tree"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:layout_height="match_parent"
        android:src="@drawable/ic_arvoren"
        android:contentDescription="@string/tree" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pontosarvore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginEnd="@dimen/_15sdp"
                android:textAlignment="center"
                android:maxLines="4"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal" />

        </LinearLayout>



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:backgroundTint="@color/dark_mint"
            android:src="@drawable/ic_info"
            app:elevation="0dp"/>

    </LinearLayout>




</FrameLayout>